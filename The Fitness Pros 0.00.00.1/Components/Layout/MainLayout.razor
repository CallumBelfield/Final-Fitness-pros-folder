@inherits LayoutComponentBase

<div class="main-container">
    <!-- Header section -->
    <header class="header">
        <!-- App name on the left -->
        <div class="app-name">
            <NavLink href="/">
                <img src="/Logo.png" alt="My App" style="height: 120px; width: auto;" />
            </NavLink>
        </div>
        <!-- Login, Signup, and Other actions on the right -->
        <div class="banner-actions">
            <NavLink class="nav-link" href="/">Home</NavLink>
            <NavLink class="nav-link" href="/login">Login</NavLink>
            <NavLink class="nav-link" href="/signup">Signup</NavLink>
        </div>
    </header>

    <!-- Main content area -->
    <div class="content">
        @Body
    </div>

    <!-- Footer section -->
    <footer class="footer">
        <!-- Place your footer content here -->
        <p>&copy; 2024 My App</p>
        <!-- You can add footer links, social media icons, etc. -->
    </footer>
</div>

<link href="css/site.css" rel="stylesheet" />

<style>
    /* Define your CSS styles for layout here */
    .main-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: url('/backgroundhome.jpg');
        background-size: cover;
        background-position: center;
    }

    .header {
        background-color: #333;
        color: white;
        padding: 10px;
        display: flex;
        justify-content: space-between; /* Align items to the start and end of the header */
    }

    .app-name {
        /* Style for the app name */
    }

    .banner-actions {
        /* Style for the banner actions (login, signup, etc.) */
    }

    .content {
        flex: 1;
        padding: 20px;
    }

    .footer {
        background-color: #333;
        color: white;
        padding: 10px;
        text-align: center;
    }

    .nav-link {
        color: white;
        text-decoration: none;
        margin-right: 10px;
    }

    .nav-link:hover {
        text-decoration: underline;
    }
</style>
